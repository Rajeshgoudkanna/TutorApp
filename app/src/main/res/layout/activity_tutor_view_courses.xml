<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.TutorViewCoursesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Course Name"
        android:textColor="#000000"
        android:textSize="30dp"
        android:id="@+id/course_name"
        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:id="@+id/course_id"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height= "1dp"
        android:background="#9E51484C" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        >
        <TableRow android:orientation="horizontal"
            android:layout_height="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Start Date"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                ></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:text="*"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000"
                android:id="@+id/start_date"
                ></TextView>
        </TableRow>
        <TableRow android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="End Date"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                ></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:text="*"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000"
                android:id="@+id/end_date"
                ></TextView>
        </TableRow>

        <TableRow android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Category"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                ></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:text="*"
                android:id="@+id/category_txt"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000"
                ></TextView>
        </TableRow>
        <TableRow android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Condition"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                ></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:text="*"
                android:id="@+id/condition_txt"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000"
                ></TextView>
        </TableRow>
        <TableRow android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Description: "
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                ></TextView>
        </TableRow>
        <TableRow android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:layout_weight="1"
                android:text="*"
                android:scrollbarFadeDuration="0"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000"
                android:lineSpacingExtra="5dp"
                android:id="@+id/txt_description"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            >
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:background="#9E51484C" />
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Files"
            android:textColor="#F44336"
            android:textSize="20dp"
            ></TextView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:id="@+id/files_listView"
            android:layout_marginTop="0dp">
        </ListView>
    </TableLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/file_name"
        android:hint="Enter the File Name"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"></EditText>
    <Button
        android:id="@+id/buttonUploadFile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="#009688"
        android:text="Upload PDF" />
</LinearLayout>

